<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pet Disease Prediction Model</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <div class="hero">
        <div class="prediction-box">
            <h1>AI Prediction</h1>
            <!-- Placeholder for AI prediction content -->
            <form action="/upload" method="POST" enctype="multipart/form-data" class="drop-area" onsubmit="return validateForm()">
                <label for="input-file">
                    <span>Click to choose image</span>
                    <span>or</span>
                    <span>Drop your image here</span>
                    <input type="file" name="profileImage" id="input-file" accept="image/*" />
                </label>
                <!-- Smaller image preview -->
                <img id="image-preview" src="" style="max-width: 150px; max-height: 150px;" />
                <button type="submit" id="Uploadbtn">Upload</button>
            </form>
            <!-- Error message (initially hidden) -->
            <p id="error-message" style="display: none; color: red;">Bhow Bhow DUMBFUCK!!</p>
            <!-- Success message (initially hidden) -->
            <p id="success-message" style="display: none; color: green;">Uploaded Successfully!</p>
        </div>
    </div>

    <script>
        function validateForm() {
            const fileInput = document.getElementById('input-file');
            if (!fileInput.files || fileInput.files.length === 0) {
                document.getElementById('error-message').style.display = 'block';
                return false;
            }
            return true;
        }

        document.getElementById('input-file').onchange = function () {
            const file = this.files[0];
            if (file) {
                const src = URL.createObjectURL(file);
                document.getElementById('image-preview').src = src;
                document.getElementById('error-message').style.display = 'none'; // Hide error message if an image is selected
            }
        };

        document.querySelector('.drop-area').addEventListener('submit', function() {
            document.getElementById('success-message').style.display = 'block';
        });
    </script>
</body>
</html>
